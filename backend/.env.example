# ======================
# SUPABASE CONFIG
# ======================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWKS untuk verifikasi token Supabase Auth
SUPABASE_JWKS_URL=https://your-project-id.supabase.co/auth/v1/.well-known/jwks.json
SUPABASE_JWT_ISSUER=https://your-project-id.supabase.co/auth/v1

# Koneksi Postgres langsung ke Supabase
DATABASE_URL=postgresql://postgres.your-project-id:your_password@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres

# ======================
# SERVER CONFIG
# ======================
PORT=3001
NODE_ENV=development

# ======================
# FRONTEND CONFIG
# ======================
FRONTEND_URL=http://localhost:3000

# ======================
# MIDTRANS CONFIG
# ======================
# Midtrans Merchant Credentials
MIDTRANS_MERCHANT_ID=your_midtrans_merchant_id
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_SERVER_KEY=your_midtrans_server_key

# Midtrans Environment
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_3DS=true
MIDTRANS_SANITIZED=true

# Midtrans Webhook Configuration
MIDTRANS_WEBHOOK_SECRET=your_webhook_secret
MIDTRANS_PAYMENT_NOTIFICATION_URL=http://localhost:3001/api/subscription/webhook
MIDTRANS_RECURRING_NOTIFICATION_URL=http://localhost:3001/api/subscription/webhook
MIDTRANS_PAY_ACCOUNT_NOTIFICATION_URL=http://localhost:3001/api/subscription/webhook

# Midtrans Callback URLs
MIDTRANS_FINISH_REDIRECT_URL=http://localhost:3000/subscription/success
MIDTRANS_UNFINISH_REDIRECT_URL=http://localhost:3000/subscription/pending
MIDTRANS_ERROR_REDIRECT_URL=http://localhost:3000/subscription/error

# ======================
# PAYMENT CONFIG
# ======================
# Payment processing settings
PAYMENT_TIMEOUT_MINUTES=15
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_WEBHOOK_TIMEOUT_MS=30000

# Subscription settings
SUBSCRIPTION_GRACE_PERIOD_DAYS=3
SUBSCRIPTION_AUTO_RENEWAL_DAYS_BEFORE_EXPIRY=7